# Database Configuration
DATABASE_URL=postgresql+psycopg2://designstream:designstream_password@localhost:5432/designstreamdb
DATABASE_URL_DEV=postgresql+psycopg2://designstream:designstream_password@localhost:5433/designstreamdb_dev

# S3/MinIO Configuration
S3_BUCKET=designstream-uploads
S3_RENDER_BUCKET=designstream-renders
S3_CI_BUCKET=designstream-ci
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here
PORT=5002

# AI/ML Configuration
CLIP_MODEL_PATH=./models/clip
YOLO_MODEL_PATH=./models/yolo
REMBG_MODEL_PATH=./models/rembg

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_FILE_SIZE_MB=25

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_AUTO_SEGMENTATION=true
ENABLE_CLIP_EMBEDDINGS=true
ENABLE_RECOMMENDATIONS=true
ENABLE_MATTING=true
